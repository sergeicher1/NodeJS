<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>www.zero-to-hero.dev</title>
  </head>
  <body>
    <h1>User list</h1>
    <p><a href="/create">Add user</a></p>
    <table>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th></th>
      </tr>
      {{#each users}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.age}}</td>
          <td>
            <a href="/edit/{{this.id}}">Edit</a>
            <form
              action="delete/{{this.id}}"
              method="POST"
              style="display: inline;"
            >
              <input type="submit" value="Delete" />
            </form>
          </td>
        </tr>
      {{/each}}
    </table>
  </body>
</html>